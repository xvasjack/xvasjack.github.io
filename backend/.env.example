# OpenAI API Key (required)
OPENAI_API_KEY=sk-your-openai-api-key

# Perplexity API Key (required for web search)
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key

# Google Gemini API Key (required)
GEMINI_API_KEY=your-gemini-api-key

# SendGrid Email Settings (required for sending emails)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDER_EMAIL=your-verified-email@gmail.com

# SerpAPI Key (optional - for Google search)
SERPAPI_API_KEY=your-serpapi-key

# Carbone API Key (required for PPTX generation)
CARBONE_API_KEY=your-carbone-api-key

# Server Port (optional, defaults to 3000)
PORT=3000
