{
  "name": "market-research-backend",
  "version": "1.0.0",
  "description": "AI-powered single-country market research deck generator",
  "main": "server.js",
  "scripts": {
    "start": "node --expose-gc --max-old-space-size=450 server.js",
    "dev": "node server.js",
    "stage:check": "node scripts/stage-check.js",
    "preflight:release": "node scripts/preflight-release.js",
    "preflight:stress": "node scripts/preflight-release.js --stress-seeds=30",
    "test:preflight": "node scripts/test-preflight.js",
    "release:loop": "node scripts/release-loop.js",
    "release:loop:deep": "node scripts/release-loop.js --stress-seeds=300",
    "smoke:readiness": "node scripts/smoke-release-readiness.js",
    "explain:system": "node scripts/explain-system.js",
    "phase:run": "node scripts/phase-run.js",
    "phase:status": "node scripts/phase-status.js",
    "phase:list": "node scripts/phase-list.js",
    "phase:paths": "node scripts/phase-paths.js",
    "phase:test": "node --test phase-tracker/phase-tracker.test.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-fetch": "^2.7.0",
    "pptxgenjs": "^4.0.1"
  },
  "engines": {
    "node": ">=18"
  }
}
